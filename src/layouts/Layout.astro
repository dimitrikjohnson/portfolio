---
import "../styles/global.css";
import "@fontsource-variable/inter";
import Analytics from '@vercel/analytics/astro'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<meta name="description" content="Dimitrik Johnson is a developer who's passionate about bringing ideas to life with code." />
		<meta property="og:image" content="/og.png" />
		<title>Dimitrik Johnson</title>
	</head>
	<body class="bg-zinc-900 text-zinc-400">
		<a
			class="uppercase transition rounded-md left-0 bg-green-400/10 text-green-300 font-medium absolute p-3 m-3 -translate-y-16 focus:translate-y-0"
			href="#content"
		>
			Skip to content
		</a>
		<slot />
		<Analytics />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
